<resources>
    <style name="Theme.general" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="elevation">1dp</item>
        <item name="colorPrimary">#14171A</item>
        <item name="colorPrimaryDark">#CCCCCC</item>
        <item name="titleTextColor">#CCCCCC</item>
        <item name="colorBackgroundFloating">#1E2A38</item>
        <item name="colorAccent">?attr/colorPrimaryDark</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <!-- lateral menu icon color -->
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bord_alerta</item>
        <item name="android:textColorPrimary">?attr/colorPrimaryDark</item>
        <item name="android:textColorSecondary">?attr/colorPrimaryDark</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="hintTextColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.general</item>
        <item name="duration">10</item>
    </style>

    <style name="Theme.BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="elevation">2dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item> <!-- Ajusta segÃºn sea necesario -->
    </style>

    <style name="CustomSpinnerText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/gris</item>
        <item name="android:popupBackground">@color/black</item>
    </style>
</resources>