<resources>
    <style name="Theme.general" parent="Theme.AppCompat.Light">
        <item name="elevation">1dp</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#040A0E</item>
        <item name="titleTextColor">#FFFFFF</item> <!-- Cambiar el color del texto del título a blanco -->
        <item name="colorBackgroundFloating">#1F2633</item>
        <item name="colorAccent">#1F2633</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="android:windowBackground">@drawable/bord_alerta</item>
        <item name="buttonTint">@color/transparente</item>
        <item name="android:textColorPrimary">@android:color/white</item> <!-- Cambiar el color del texto principal a blanco -->
        <item name="android:textColorSecondary">@android:color/white</item> <!-- Cambiar el color del texto secundario a blanco -->
    </style>


    <style name="Theme.splash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.general</item>
    </style>

    <style name="Theme.BotonSheet" parent="Theme.Design.BottomSheetDialog">
        <item name="elevation">2dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.0</item> <!-- Ajusta según sea necesario -->
    </style>
</resources>