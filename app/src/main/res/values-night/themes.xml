<resources>
    <style name="Theme.general" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="elevation">1dp</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#CCCCCC</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="colorBackgroundFloating">#B4111A4A</item>
        <item name="colorAccent">#B4111A4A</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorPrimary">#FFFFFF</item> <!-- Color de fondo principal -->
        <item name="android:windowBackground">@drawable/bord_alerta</item> <!-- Fondo de la ventana con el borde de alerta -->
        <item name="buttonTint">@color/transparente</item> <!-- Tinte del botón -->
        <item name="android:textColorPrimary">@android:color/black</item> <!-- Color del texto principal -->
        <item name="android:textColorSecondary">@android:color/black</item> <!-- Color del texto secundario -->
    </style>

    <style name="Theme.splash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.general</item>
    </style>

    <style name="Theme.BotonSheet" parent="Theme.Design.BottomSheetDialog">
        <item name="elevation">2dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.0</item> <!-- Ajusta según sea necesario -->
    </style>
</resources>