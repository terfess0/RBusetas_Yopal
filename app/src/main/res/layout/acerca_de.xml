<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    tools:context=".actividades.AcercaDe">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bord_suave"
            android:backgroundTint="#D4DAEF"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textVie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fuente_datos"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/link_alcaldia"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#072EA3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tema_sugerido_sms"
                android:textColor="#000000"
                android:textSize="20sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/contc_wts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/mensaje_contacto_wts"
                    android:src="@drawable/ic_whatsapp" />

                <ImageButton
                    android:id="@+id/contc_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/mensaje_contacto"
                    android:src="@drawable/ic_mail" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Iconos de Freepik"
                android:textSize="8sp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/verInfoHorarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="InformaciÃ³n de Horarios"
                android:textAlignment="textStart"
                android:backgroundTint="#ffffff"
                android:drawableEnd="@drawable/ic_flecha_aderecha" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/horarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nHorarios"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nLos horarios muestran la hora en que sale la primera buseta y la hora en que sale la ultima buseta de la ruta correspondiente (Aproximadamente).\n\nHorarios Lunes a Viernes, Sabados y Domingos-Festivos. \n\nAbajo del horario esta la frecuencia, es el tiempo que hay entre la salida de cada buseta, es decir, cada cierto tiempo sale del parquedero la buseta.\n"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="De acuerdo al dia de la semana el horario adquirira un color que indica la disponibiliada del servicio\n- Cuando la buseta esta funcionando/en servicio:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="TODO"
                android:src="@drawable/img_info_horario_on" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n- Cuando la buseta no esta funcionando/fuera de servicio."
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="TODO"
                android:src="@drawable/img_info_horario_off"
                android:layout_marginBottom="10dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>