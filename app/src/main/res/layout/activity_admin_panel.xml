<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".admin.view.AdminPanel">

    <LinearLayout
        android:id="@+id/contain1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnRouteAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#DA158ABF"
            android:drawableEnd="@drawable/ic_route"
            android:paddingVertical="25dp"
            android:shadowColor="@color/amarillo"
            android:text="Rutas"
            android:textAlignment="textStart"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnPriceAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#973112"
            android:drawableEnd="@drawable/ic_price"
            android:paddingVertical="25dp"
            android:shadowColor="@color/amarillo"
            android:text="Precio"
            android:textAlignment="textStart"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contain1">

        <Button
            android:id="@+id/btnReportsAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#DA319E0A"
            android:drawableEnd="@drawable/ic_list_reports"
            android:paddingVertical="25dp"
            android:shadowColor="@color/black"
            android:text="Reportes"
            android:textAlignment="textStart"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>